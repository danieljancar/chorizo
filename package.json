{
  "name": "chorizo",
  "version": "0.1.0",
  "description": "A self-hosted course management platform. Manage courses, create entry lists, and share downloadable resources seamlessly. Fully dynamic and tailored for streamlined administration.",
  "scripts": {
    "lint": "eslint '**/*.{ts,tsx}'",
    "lint:fix": "eslint '**/*.{ts,tsx}' --fix",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "build:all:dev": "npm run build:adminui:dev && npm run build:course:dev",
    "build:adminui:dev": "cd apps/admin-ui && npm run build",
    "build:course:dev": "cd apps/course && npm run build:dev",
    "preview:prepare:dev": "firebase use chorizo-dev",
    "preview:deploy:dev": "firebase deploy --only hosting"
  },
  "author": "Daniel Jancar",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/danieljancar/chorizo.git"
  },
  "bugs": {
    "email": "dan_jan1@icloud.com",
    "url": "https://github.com/danieljancar/chorizo/issues"
  },
  "keywords": [
    "course",
    "management",
    "platform",
    "self-hosted",
    "dynamic",
    "tailored",
    "streamlined",
    "administration",
    "technical-course",
    "course-management"
  ],
  "homepage": "https://github.com/git+,danieljancar/chorizo#readme",
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "daisyui": "^4.6.1",
    "eslint": "^8.56.0",
    "firebase-tools": "^13.4.0",
    "husky": "^9.0.7",
    "prettier": "3.2.4",
    "semantic-release": "^23.0.0"
  }
}
